<Window x:Class="GMS2TranslationFileInstaller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GMS2TranslationFileInstaller"
        mc:Ignorable="d"
        Title="GameMaker Studio 2 翻译器" Height="382.425" Width="460.961" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Name="BtnInstallCHN" Content="安装汉化文件（CHN）" HorizontalAlignment="Left" Height="100" Margin="26,223,0,0" VerticalAlignment="Top" Width="190"/>
        <Button Name="BtnRepairENG" Content="修复英文文件（ENG）" HorizontalAlignment="Left" Height="100" Margin="10,223,0,0" VerticalAlignment="Top" Width="190" Click="Button_Click" Grid.Column="1"/>
        <TextBlock Name="LabelInstalldir" HorizontalAlignment="Left" Height="16" Margin="26,79,0,0" TextWrapping="Wrap" Text="GameMaker Studio 2 安装路径" VerticalAlignment="Top" Width="190"/>
        <Label Name="LabelPathWarning" Content="" HorizontalAlignment="Left" Height="25" Margin="101,116,0,0" VerticalAlignment="Top" Width="325" HorizontalContentAlignment="Right" Foreground="Red" Grid.ColumnSpan="2"/>
        <TextBox Name="TextInstallDir" HorizontalAlignment="Left" Height="18" Margin="26,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="346" IsEnabled="False" TextChanged="TextInstallDir_Changed" Grid.ColumnSpan="2"/>
        <ComboBox Name="ComBoxVerSelector" HorizontalAlignment="Left" Height="22" Margin="26,161,0,0" VerticalAlignment="Top" Width="400" SelectionChanged="ComboBox_SelectionChanged" IsEditable="True" Grid.ColumnSpan="2"/>
        <Button Name ="BtnInstallDirBrowse" Content="浏览……" HorizontalAlignment="Left" Height="18" Margin="146,100,0,0" VerticalAlignment="Top" Width="54" IsEnabled="False" Click="BtnInstallDir_Click" Grid.Column="1"/>
        <CheckBox Name="ChBoxAutoSearch" Content="自动查找" HorizontalAlignment="Left" Height="14" Margin="26,123,0,0" VerticalAlignment="Top" Width="70" Checked="ChBoxAutoSearch_Checked" Unchecked="ChBoxAutoSearch_Unchecked"/>
        <TextBlock HorizontalAlignment="Left" Height="14" Margin="26,142,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="24"><Run Text="版本"/><LineBreak/><Run/></TextBlock>

    </Grid>
</Window>
